<article role="listitem">
    {# class="grid" #}
    <div>
        <a href="{{ post.url | url }}">
            <img src="{{ post.data.image | url }}" alt="{{ post.data.imageAlt }}"  width="1000" height="500">
        </a>
        <h3 class="summary--title">
            <a href="{{ post.url | url }}">
                {{ post.data.title }}
            </a>
        </h3>
        <div class="author">
            Por 
            <span>{{ post.data.author }}</span> 
            publ. en 
            <span>{{ post.date | postDate }}</span>
        </div>
    </div>
    <p class="post--summary">
        {{ post.data.description }}
    </p>
</article>